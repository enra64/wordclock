<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/shakeTresholdDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shake Treshold: "
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/shakeTreshold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/shakeTresholdBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="3000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/shakeDelayDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shake Delay: "
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/shakeDelay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="700"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/shakeDelayBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="1500" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/brightnessdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brightness: "
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/brightness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/brightnessBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/refreshRateDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh delay: "
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/refreshRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100ms"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/refreshRateBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="1200" />

    <TextView
        android:id="@+id/macTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wordclock MAC Address"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/macEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tutorialView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tutorial: "
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <CheckBox
            android:id="@+id/introCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="introCheckBoxClicked" />
    </LinearLayout>

</LinearLayout>